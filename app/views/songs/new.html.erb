<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br>
  <%= f.label :genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <%= f.label 'Note 1' %><%= f.text_field :note_contents, name: "song[note_contents][]", id: 'song_notes_1' %><br>
  <%= f.label 'Note 2' %><%= f.text_field :note_contents, name: "song[note_contents][]", id: 'song_notes_2' %><br>
  <br />

  <%= f.submit %>
<% end %>
